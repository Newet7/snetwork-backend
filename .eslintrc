{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": "airbnb-base",
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "max-len": ["error", { "code": 120 }],
    "linebreak-style": 0,
    "global-require": 0,
    "eslint linebreak-style": [0, "error", "windows"],
    "semi": ["error", "never"],
    "object-curly-newline": ["error", "always"],
    "import/no-extraneous-dependencies": [
      "error",
      {"devDependencies": true}
    ],
    "no-underscore-dangle": ["error", { "allow": ["_id"] }]
  }
}
